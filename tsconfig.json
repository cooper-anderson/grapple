{
	"compilerOptions": {
		"module": "ESNext",
		"declaration": true,
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "ES6",
		"sourceMap": true,
		"lib": [
			"ES6",
			"dom"
		],
		"allowSyntheticDefaultImports": true,

		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react"
	},
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	],
	"include": [
		"./src"
	]
}
